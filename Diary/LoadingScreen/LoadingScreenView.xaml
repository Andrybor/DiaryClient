<Window x:Class="Diary.LoadingScreen.LoadingScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="500" Height="300"
             AllowsTransparency="True"
             WindowStyle="None"
             WindowStartupLocation="CenterScreen" >
    <Window.Background>
        <ImageBrush ImageSource="/Themes/Background.jpg" />
    </Window.Background>
    <Grid >
        <ProgressBar
            IsIndeterminate="True" Foreground="LimeGreen" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
    </Grid>
</Window>

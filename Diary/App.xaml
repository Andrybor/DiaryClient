<Application x:Class="Diary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Diary">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:AppBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>
                <!--<ResourceDictionary Source="Themes/Theme.xaml"/>-->
                <ResourceDictionary Source="/Diary;component/Themes/Theme.xaml" />


                <!--Languages-->
                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                <ResourceDictionary Source="pack://application:,,,/Diary.Resources;component/Languages/EN.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Diary.Resources;component/Languages/RU.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Diary.Resources;component/Languages/UA.xaml" />
                <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                <!--Languages-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>